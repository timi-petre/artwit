<div class="container mt-3 py-5">
    <h3 class="my-3">Create Your Art here</h3>
    <form action="/create" enctype="multipart/form-data" method="post">
        <label for="image">Art Title</label>
        <input
            type="text"
            name="title"
            id="title"
            class="form-control"
            placeholder="Enter Title"
            required
        />

        <label for="image">Author Name</label>
        <input
            type="text"
            name="name"
            id="name"
            class="mt-3 form-control"
            value="<%= name %> "
            placeholder="Enter Author Name"
            required
        />

        <label for="image">Description</label>
        <textarea
            name="content"
            id="content"
            cols="30"
            rows="10"
            class="mt-3 form-control"
            placeholder="Enter text here..."
            required
        ></textarea>

        <label for="image">Article Image</label>
        <input
            type="file"
            class="mt-3 form-control"
            name="image"
            accept="image/*"
        />

        <input
            type="submit"
            value="Create"
            class="mt-4 btn btn-md btn-danger"
        />
    </form>
</div>
